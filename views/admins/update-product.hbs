<main id="main" class="main">

  <div class="pagetitle">
    <h1>Update Product</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Home</a></li>
        <li class="breadcrumb-item active">Update Product</li>
      </ol>
    </nav>
  </div><!-- End Page Title -->
  <section class="section dashboard">
    <div class="row">
      <!-- Left side columns -->
      <div class="col-lg-12">
        <div class="row">
          <div class="col-12">
            <div class="card">
                  <section class="py-0 ux-section bg-light">
                        <div class="container mt-5 mb-5">
                              <div class="row d-flex align-items-center justify-content-content">
                                    <div class="container tm-mt-big tm-mb-big">
                                          <div class="row">
                                                <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
                                                      <div class="tm-block tm-block-h-auto">
                                                            <div class="row">
                                                                  <div class="col-12">
                                                                  <h1 class="display-4 fw-bold mb-5 text-center">Update Product</h1>
                                                                  </div>
                                                            </div>
                                                            <p class="text-danger">{{error}}</p>
                                                            <form method="POST" action="/update-product" class="update-product">
                                                                 
                                                                        <div class="row tm-edit-product-row">                                                
                                                                              <div class="col-xl-6 col-lg-6 col-md-12">
                                                                                    {{#each product}}
                                                                                          <form action="" class="tm-edit-product-form">
                                                                                                <div class="form-group mb-3">
                                                                                                      <label for="product_name">{{productName}}</label>
                                                                                                      <input id="product_name"name="product_name" type="text" class="form-control validate" value="{{product_name}}" required/>
                                                                                                </div>
                                                                                                <div class="form-group mb-3">
                                                                                                      <label for="id_partner">{{partnerId}}</label>
                                                                                                      <input id="id_partner" name="id_partner" type="text" class="form-control validate" value="{{id_partner}}" required/>
                                                                                                </div>
                                                                                                <div class="form-group mb-3">
                                                                                                      <label for="name_catalogue">Catalogue</label>
                                                                                                      <input id="name_catalogue" name="name_catalogue" type="text" class="form-control validate" required/>
                                                                                                </div>
                                                                                                <div class="form-group mb-3">
                                                                                                      <label for="description">{{description}}</label>
                                                                                                      <textarea id="description" name="description" class="form-control validate" rows="3" value="{{description}}" required></textarea>
                                                                                                </div>
                                                                                                <div class="form-group mb-3">
                                                                                                      
                                                                                                      <label for="category">Category</label>
                                                                                                      <select class="custom-select tm-select-accounts" id="category">
                                                                                                            <option selected>Select category</option>
                                                                                                            {{#each catalogueList}}               
                                                                                                            <option name="catalogue_id" value="{{id}}">{{name}}</option>
                                                                                                            
                                                                                                            {{/each}}
                                                                                                      </select>
                                                                                                      
                                                                                                </div>
                                                                                          
                                                                                                <div class="row">
                                                                                                      <div class="form-group mb-3 col-xs-12 col-sm-6">
                                                                                                            <label for="expire_date">{{createdAt}}</label>
                                                                                                            <input id="expire_date" name="expire_date" type="text" class="form-control validate" data-large-mode="true" value="{{expire_date}}"/>                                                      
                                                                                                      </div>
                                                                                                      <div class="form-group mb-3 col-xs-12 col-sm-6">
                                                                                                            <label for="price">Price</label>
                                                                                                            <input id="price" name="price" type="text" class="form-control validate" value="{{price}}" required/>                                                     
                                                                                                      </div>
                                                                                                </div>
                                                                                                
                                                                                    </div>
                                                                                                <div class="col-xl-2 col-lg-6 col-md-12 mx-auto mb-4">
                                                                                                
                                                                                                      <div class="center">
                                                                                                            

                                                                                                            <div class="dropzone">
                                                                                                                  <img src="{{productImageUrl}}" class="upload-icon" />
                                                                                                                  <input type="file" id="upload_image" class="upload_image" value="{{upload_image}}" />
                                                                                                            </div>

                                                                                                            <button type="button" class="btn" name="uploadbutton">Upload file</button>

                                                                                                      </div>
                                                                                                      
                                                                                                      {{!-- <div class="tm-product-img-dummy mx-auto">
                                                                                                            <i
                                                                                                                  class="bi bi-cloud-arrow-up-fill tm-upload-icon"
                                                                                                                  onclick="document.getElementById('fileInput').click();"
                                                                                                            ></i>
                                                                                                      </div>
                                                                                                      <div class="custom-file mt-3 mb-3">
                                                                                                            <input id="fileInput" type="file" style="display:none;" />
                                                                                                            <input type="button" class="button-41 mx-auto" style="background-color:#11a683" value="Upload Product Image"                                                                                                    
                                                                                                                  onclick="document.getElementById('fileInput').click();"
                                                                                                            />
                                                                                                      </div> --}}
                                                                                                </div>
                                                                                                <div class="col-12">
                                                                                                      <button type="submit" class="button-41 btn-block" >Update Product Now</button>
                                                                                                </div>
                                                                                          </form>
                                                                                    {{/each}}
                                                                              
                                                                              
                                                                        </div>
                                                                  
                                                            </form>
                                                      </div>
                                                </div>
                                          </div>
                                    </div>
                              </div>                       
                        </div>
                  </section>                             
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
