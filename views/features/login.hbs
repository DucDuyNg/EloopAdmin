<section class="h-100 mt-5">
  <div class="container h-100">
    <div class="row justify-content-sm-center h-100">
      <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
        <div class="card shadow-lg mt-5">
          <div class="text-center mt-3">
            <img src="/images/logo.png" alt="logo" width="200">
          </div>
          <div class="card-body p-5">
            <h1 class="fs-4 card-title fw-bold text-success">ĐĂNG NHẬP</h1>
            <form method="POST" action="/login" class="needs-validation" novalidate="" autocomplete="off">
              <div class="mb-3">
                <label class="mb-2 text-muted" for="username">E-Mail</label>
                <input id="username" class="form-control" name="username" value="" required autofocus>
                <div class="invalid-feedback">
                  Vui lòng nhập email
                </div>
              </div>

              <div class="mb-3">
                <div class="mb-2 w-100">
                  <label class="text-muted" for="password">Password</label>
                  <a href="#" class="float-end">
                    Quên mật khẩu?
                  </a>
                </div>
                <input id="password" type="password" class="form-control" name="password" required>
                <div class="invalid-feedback">
                  Vui lòng nhập mật khẩu
                </div>
              </div>

              <div class="d-flex align-items-center">
                <button type="submit" class="btn btn-success ms-auto">
                  Đăng nhập
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>